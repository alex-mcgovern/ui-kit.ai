{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "include-component-in-tag": true,
    "include-v-in-tag": true,
    "group-pull-request-title-pattern": "‚ùñ @ui-kit.ai v${version}",
    "release-type": "node",
    "tag-separator": "@",
    "changelog-sections": [
        { "type": "feat", "section": "Features" },
        { "type": "fix", "section": "Bug Fixes" },
        { "type": "perf", "section": "Performance Improvements" },
        { "type": "revert", "section": "Reverts" },
        { "type": "chore", "section": "Miscellaneous Chores" },
        { "type": "docs", "section": "Documentation" },
        { "type": "style", "section": "Styles" },
        { "type": "refactor", "section": "Code Refactoring" },
        { "type": "test", "section": "Tests" },
        { "type": "build", "section": "Build System" },
        { "type": "ci", "section": "Continuous Integration" }
    ],
    "packages": {
        ".": {
            "always-update": true
        },
        "packages/components": {
            "always-update": true
        },
        "packages/docs": {
            "always-update": true
        },
        "packages/eslint": {
            "always-update": true
        },
        "packages/mcp-server": {
            "always-update": true
        },
        "packages/metadata": {
            "always-update": true
        },
        "packages/mocks": {
            "always-update": true
        },
        "packages/prettier": {
            "always-update": true
        },
        "packages/storybook": {
            "always-update": true
        },
        "packages/tests": {
            "always-update": true
        },
        "packages/theme": {
            "always-update": true
        },
        "packages/tsconfig": {
            "always-update": true
        },
        "packages/vite": {
            "always-update": true
        },
        "packages/vitest": {
            "always-update": true
        }
    },
    "plugins": [
        {
            "type": "linked-versions",
            "groupName": "all",
            "components": [
                ".",
                "packages/components",
                "packages/docs",
                "packages/eslint",
                "packages/mcp-server",
                "packages/metadata",
                "packages/mocks",
                "packages/prettier",
                "packages/storybook",
                "packages/tests",
                "packages/theme",
                "packages/tsconfig",
                "packages/vite",
                "packages/vitest"
            ]
        }
    ]
}
